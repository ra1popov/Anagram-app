<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/nav_permissions">

    <fragment
        android:id="@+id/nav_permissions"
        android:name="app.anagram.ui.permissions.PermissionsFragment"
        tools:layout="@layout/fragment_permissions">

        <action
            android:id="@+id/action_nav_home_to_nav_video"
            app:destination="@id/nav_video"
            app:popUpTo="@id/nav_permissions"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/nav_video"
        android:name="app.anagram.ui.video.VideoFragment"
        tools:layout="@layout/fragment_video" />

</navigation>